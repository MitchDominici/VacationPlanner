@model IList<VacationPlanner.Models.City>

<!DOCTYPE html>
<html>
    <body>

    <table class="tabel">
        <tr>
            <th>City</th>
        </tr>
        
        @foreach (var city in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Itinerary" asp-action="ViewItineraries">@city.Name</a>
                </td>
            </tr>
        }
    </table>
    
    @if (Model.Count == 0)
    {
        <p>No destinations yet!</p>
    }
    </body>
</html>